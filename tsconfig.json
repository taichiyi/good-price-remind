{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "esnext",
    "lib": ["esnext"],
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "removeComments": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "log",
    "**/*.spec.ts"
  ]
}
